<%= simple_form_for(@production_year) do |f| %>
    <%= f.input :year %>
  <p><%= @production_year.car_model.id %></p>
  <h3>Issues</h3>
  <%= f.simple_fields_for :issues do |issue| %>
      <%= render 'issue_fields', :f => issue %>
  <% end %>
  <div class="links">
      <%= link_to_add_association "Добавить issue", f, :issues %>
  </div>
  <%= f.button :submit %>
<% end %>
