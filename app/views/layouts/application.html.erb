# encoding: utf-8
<!DOCTYPE HTML>
<html lang="ru-RU">
<head>
        <meta charset="UTF-8">
        <title>Avtologi</title>
        <%= stylesheet_link_tag    "application" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
</head>

<body>
<div id="header"><h1>Avtologi</h1>
<p>click this</p>

<div class="hidden">It will be hidden</div>

 </div>

    <div class="container">
        <div class="user_nav">
            <% if current_user %>
                Зашли как: <%= current_user.email %>
                <%= link_to "Выйти", logout_path %>
                <% if can? :index, :admin %>
                    <%= link_to "Админка", admin_path %>
                <% end %>
            <% else %>
                <%= link_to "Зарегистрироваться", register_path %> или
                <%= link_to "Войти", login_path %>
            <% end %>
        </div>
        <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}"%>
        <% end %>
        <%= yield %>
    </div>
    <div id="footer">Copyright</div>
</body>
</html>
