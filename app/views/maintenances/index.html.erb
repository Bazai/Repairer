<% @maintenances.each do |maintenance| %>
  <tr>
    <td><%= maintenance.production_year.car_model.brand.name %></td>
    <td><%= maintenance.production_year.car_model.name %></td>
    <td><%= maintenance.production_year.year %></td>
    <td><%= maintenance.description %></td>
    <td><%= maintenance.price %></td>
    <td><%= link_to 'Show', maintenance %></td>
    <td><%= link_to 'Edit', edit_maintenance_path(maintenance) %></td>
    <td><%= link_to 'Destroy', maintenance, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

