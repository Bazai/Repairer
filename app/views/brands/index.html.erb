<h1>Список брэндов</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.name %></td>
    <td><%= image_tag brand.logo_url.to_s %></td>
    <td><%= link_to 'Показать', brand %></td>
    <td>
        <% if can? :manage, brand %>
            <%= link_to 'Редактировать', edit_brand_path(brand) %>
        <% end %>
    </td>
    <td><%= link_to 'Удалить', brand, :method => 'delete', :confirm => "Вы уверены?" %></td>
  </tr>
<% end %>
</table>

<br />

